<ul>
   <li><%= cat.name %></li>
   <li><%= cat.color %></li>
   <li><%= cat.sex %></li>
   <li><%= cat.birth_date %></li>
   <li><%= cat.description %></li>
   <% if action == :show %>
        <li> <a href = "<%= cats_url %>"> All Cats </a></li>
    <% else %>
        <li> <a href = "<%= cat_url(cat) %>"> This cat </a></li>
   <% end %>
</ul>

